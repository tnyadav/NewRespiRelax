<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_footer_lft_right_margin"
        android:layout_marginRight="@dimen/header_footer_lft_right_margin"
        android:layout_marginTop="@dimen/header_footer_margin" >

        <ImageView
            android:layout_width="@dimen/icon_height"
            android:layout_height="@dimen/icon_width"
            android:src="@drawable/logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/translated_icon_width"
            android:layout_height="@dimen/translated_icon_height"
            android:text="@string/translated"
            android:textSize="26dip"
            android:textStyle="bold"
            android:paddingTop="34dip"
            android:textColor="@color/translated_text_color"
            android:gravity="center_vertical|top|center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <com.bib.breaterelax.util.CalibriTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/seekbar_text_side_margin"
                android:layout_marginRight="@dimen/seekbar_text_side_margin"
                android:layout_marginTop="@dimen/seekbar_text_top_margin"
                android:text="@string/duration"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_text_size" />

            <SeekBar
                android:id="@+id/seekBarTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/seekbar_top_margin"
                android:paddingLeft="@dimen/seekbar_side_margin"
                android:paddingRight="@dimen/seekbar_side_margin"
                android:progress="1" />

            <com.bib.breaterelax.util.CalibriTextView
                android:id="@+id/tvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/seekbar_text_side_margin"
                android:layout_marginRight="@dimen/seekbar_text_side_margin"
                android:layout_marginTop="@dimen/seekbar_text_top_margin"
                android:text="@string/breath"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_text_size" />

            <SeekBar
                android:id="@+id/seekBarFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/seekbar_top_margin"
                android:paddingLeft="@dimen/seekbar_side_margin"
                android:paddingRight="@dimen/seekbar_side_margin"
                android:progress="1" />

            <LinearLayout
                android:id="@+id/cen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/central_box_side_margin"
                android:layout_marginRight="@dimen/central_box_side_margin"
                android:layout_marginTop="@dimen/central_box_Top_margin"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/box_internal_padding"
                        android:background="@android:color/transparent"
                        android:orientation="vertical" >

                        <com.bib.breaterelax.util.CalibriTextView
                            android:id="@+id/com.bib.breaterelax.util.CalibriTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:padding="@dimen/setting_medium_text_padding"
                            android:textSize="@dimen/setting_medium_text" />

                        <com.bib.breaterelax.util.CalibriTextView
                            android:id="@+id/com.bib.breaterelax.util.CalibriTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/inspiration"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/setting_small_text"
                            android:padding="@dimen/setting_small_text_padding"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_height"
                            android:background="@android:color/white" />

                        <com.bib.breaterelax.util.CalibriTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/expiration"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/setting_small_text"
                            android:padding="@dimen/setting_small_text_padding"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:weightSum="3" >

                    <LinearLayout
                        android:id="@+id/c1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/box_parrent_margin_left"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/box_internal_padding"
                            android:background="@color/box_color_blue"
                            android:orientation="vertical" >

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/setting_small_text_padding"
                                android:text="@string/relaxtion"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_small_text" />

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="@string/six"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_medium_text"
                                 android:padding="@dimen/setting_medium_text_padding"
                                />

                            <View
                                android:layout_width="match_parent"
                                 android:layout_height="@dimen/view_height"
                                android:background="@android:color/white" />

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/setting_medium_text_padding"
                                android:text="@string/four"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_medium_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/c2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/box_parrent_margin_left"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/box_internal_padding"
                            android:background="@color/box_color_green"
                            android:orientation="vertical" >

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/setting_small_text_padding"
                                android:text="@string/equilibre"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_small_text" />

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="@string/five"
                                android:textColor="@android:color/white"
                                 android:padding="@dimen/setting_medium_text_padding"
                                android:textSize="@dimen/setting_medium_text" />

                            <View
                                android:layout_width="match_parent"
                                 android:layout_height="@dimen/view_height"
                                android:background="@android:color/white" />

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/setting_medium_text_padding"
                                android:text="@string/five"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_medium_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/c3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/box_parrent_margin_left"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/box_internal_padding"
                            android:background="@color/box_color_red"
                            android:orientation="vertical" >

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/setting_small_text_padding"
                                android:text="@string/dynamisant"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_small_text" />

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="@string/four"
                                android:textColor="@android:color/white"
                                 android:padding="@dimen/setting_medium_text_padding"
                                android:textSize="@dimen/setting_medium_text" />

                            <View
                                android:layout_width="match_parent"
                                 android:layout_height="@dimen/view_height"
                                android:background="@android:color/white" />

                            <com.bib.breaterelax.util.CalibriTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:padding="@dimen/setting_medium_text_padding"
                                android:text="@string/six"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/setting_medium_text" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_footer_margin"
        android:layout_marginLeft="@dimen/header_footer_lft_right_margin"
        android:layout_marginRight="@dimen/header_footer_lft_right_margin" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/guide"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="left"
                android:background="@drawable/guide"
                android:gravity="center" />

            <com.bib.breaterelax.util.CalibriTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/guide"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/timer_bg"
                android:gravity="center"
                android:padding="@dimen/normal_text_padding"
                android:text="@string/validator"
                android:textColor="@android:color/white"
                android:textSize="@dimen/setting_medium_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>