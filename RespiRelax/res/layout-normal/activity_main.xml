<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/header_footer_lft_right_margin"
        android:layout_marginRight="@dimen/header_footer_lft_right_margin"
        android:layout_marginTop="@dimen/header_footer_margin" >

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/logo" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/translated_icon_width"
            android:layout_height="@dimen/translated_icon_height"
            android:src="@drawable/translated" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:id="@+id/im"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/tim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/header_footer_lft_right_margin"
        android:orientation="vertical" >

        <Button
            android:id="@+id/b1"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_gravity="right"
            android:background="@drawable/play"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/header_footer_lft_right_margin"
        android:orientation="vertical" >

        <com.tn.respirelax.util.CalibriTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timer_bg"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@android:color/white" />

        <com.tn.respirelax.util.CalibriTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/remaining_time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/header_footer_margin"
        android:layout_marginLeft="@dimen/header_footer_lft_right_margin"
        android:layout_marginRight="@dimen/header_footer_lft_right_margin" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/guide"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="left"
                android:background="@drawable/guide"
                android:gravity="center" />

            <com.tn.respirelax.util.CalibriTextView
                android:id="@+id/calibricom.tn.respirelax.util.CalibriTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/guide"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnSetting"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="right"
                android:background="@drawable/setting_button"
                android:gravity="center" />

            <com.tn.respirelax.util.CalibriTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>